<%= form_for(contract, local: true) do |f| %>

  <%= render('layouts/form_record_errors', record: contract) %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="contract_name"><%= t('.name') %></label>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="contract_slug"><%= t('.url') %></label>
            <%= f.text_field :slug, class: 'form-control', readonly: contract.persisted?, required: true %>
            <small class="form-text text-muted"><%= t('.url_advice') %>. Ex: <b>tos</b> <%= t('.url_for') %> myserver.com/contracts/<b>tos</b></small>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="contract_content_html"><%= t('.content') %></label>
        <small class="form-text text-muted"><%= t('.content_advice') %></small>
        <%= f.text_area :content_html, class: 'form-control', required: true %>
      </div>

    </div>

    <div class="card-footer d-flex justify-content-start mt-3">
      <%= f.submit(t('.save'), class: 'btn btn-round btn-primary mr-4', data: {disable_with: t('.waiting')} ) %>
      <%= link_to(t('.back'), contracts_path, class: 'btn btn-default btn-round') %>
    </div>
  </div>

<% end %>

<script>
  $(window).on('load', function() {
    $('#contract_content_html').summernote();
  })

  document.addEventListener('turbolinks:load', function() {
    $('#contract_content_html').summernote();
  });
</script>
